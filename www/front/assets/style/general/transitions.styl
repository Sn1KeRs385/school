.transition-tab-right
  &-enter
    transform translateX(100%)

  &-enter-active
    transition transform 0.3s ease

  &-enter-to
    transform translateX(0)

  &-leave
    transform translateX(0)

  &-leave-active
    transition transform 0.3s ease
    position absolute !important
    top 0
    left 0
    width 100%
    z-index 10

  &-leave-to
    transform translateX(-100%)

.transition-tab-left
  &-enter
    transform translateX(-100%)

  &-enter-active
    transition transform 0.3s ease

  &-enter-to
    transform translateX(0)

  &-leave
    transform translateX(0)

  &-leave-active
    transition transform 0.3s ease
    position absolute !important
    top 0
    left 0
    width 100%
    z-index 10

  &-leave-to
    transform translateX(100%)
