@import "../params/colors.styl"
@import "../mixins.styl"
@import "input-container.styl"
@import "transitions.styl"

#__nuxt, #__layout, .the-main-layout
  min-height 100vh

html
  background-color $secondary_back_color
  text_rubik()
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  font-weight 400

@-moz-document url-prefix()
  body
    font-weight lighter !important


.adjacent-modal-open
  @media screen and (min-width 768px)
    min-height 100%
    overflow hidden
    width 100%
    position relative

  @media screen and (max-width 767px)
    & .the-main-layout__content
      overflow hidden

    & .the-main-layout__content>*:first-child
      position absolute

.modal-open
  min-height 100%
  overflow hidden
  width 100%
  position relative

.hidden
  opacity 0
  position absolute
  max-width 0
  max-height 0
  overflow hidden
  pointer-events none

input[type="number"] {
    -webkit-appearance: textfield;
    -moz-appearance: textfield;
    appearance: textfield;
  }

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
}

::selection {
  background: #ceeeec; /* WebKit/Blink Browsers */
}
::-moz-selection {
  background: #ceeeec; /* Gecko Browsers */
}

*
  //-webkit-touch-callout: none;
  //-webkit-user-select: none;
  //-khtml-user-select: none;
  //-moz-user-select: none;
  //-ms-user-select: none;
  //user-select: none;
  -webkit-tap-highlight-color: transparent;

.success-toast
  background-color $active_element_color !important
  color white !important
  padding 15px !important
  border-radius 5px !important

  @media screen and (max-width 600px)
    margin 15px 15px 0 15px !important
