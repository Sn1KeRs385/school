@import "../../assets/style/params/colors.styl"

.the-header
  top 0
  left 0
  right 0
  display flex
  flex-direction column
  z-index 1000
  background-color $header_back_color
  height 50px

  @media screen and (max-width 991px)
    position static

  &__content
    position relative
    flex-grow 1
    display flex

    &__space
      position relative
      width 420px
      height 100%
      border-right 1px solid alpha(white, 0.1)

      @media screen and (max-width 991px)
        display none

  &__logout
    display block
