@import "../../assets/style/colors.styl"
@import "../../assets/style/mixins.styl"

.post
  background-color #ffffff
  border-radius 10px
  margin-bottom 10px
  width 100%

  .post__header
    position relative
    display flex
    border-bottom 1px solid lightGrayColor
    padding 15px
    padding-bottom 14px

    .post__avatar
      width 50px
      height 50px
      border-radius 50%

    .post__name
      rubik-regular()
      font-size 16px
      line-height 20px
      color blackColor
      padding 5px 15px

    .post__login
      rubik-regular()
      font-size 14px
      line-height 20px
      color grayColor
      margin-top 1px

    .post__menu
      position absolute
      top 25px
      right 10px
      width 30px
      height 30px
      background-image url('../../assets/image/post_menu.svg')
      background-size contain
      background-position center
      background-repeat no-repeat
      cursor pointer

  .post__content
    padding 16px 15px 15px

    .post__title
      rubik-regular()
      font-size 20px
      line-height 25px
      color blackColor

    .post__geo-position
      position relative
      rubik-regular()
      font-size 14px
      line-height 20px
      color grayColor
      padding-left 19px
      padding-top 5px

      &:before
        content ''
        position absolute
        left 0px
        top 4px
        width 14px
        height 20px
        background-image url('../../assets/image/geo.svg')
        background-size contain
        background-position center
        background-repeat no-repeat
        cursor pointer

  .post__picture
    margin-top 18px
    margin-bottom 2px
    width 100%

  .post__text
    rubik-regular()
    font-size 14px
    line-height 20px
    color blackColor
    margin-top 10px

    .post__more
      color grayColor
      margin-left 5px
      cursor pointer

  .post__tags
    display flex
    margin-top 10px
    margin-bottom -1px

    .post__tag
      rubik-regular()
      font-size 14px
      line-height 20px
      color grayColor
      margin-right 11px

  .post__params
    display flex
    rubik-regular()
    font-size 14px
    line-height 15px
    color grayColor
    margin-top 22px
    margin-bottom 7px

    .post__data
      position relative
      padding-left 19px
      cursor pointer

      &:before
        content ''
        position absolute
        top -1px
        left 0px
        width 14px
        height 15px
        background-image url('../../assets/image/date.svg')
        background-size contain
        background-position center
        background-repeat no-repeat

    .post__stars
      position relative
      margin-left 21px
      padding-left 23px
      cursor pointer

      &:before
        content ''
        position absolute
        left 0px
        top -3px
        width 18px
        height 18px
        background-image url('../../assets/image/rating.svg')
        background-size contain
        background-position center
        background-repeat no-repeat

    .post__likes
      position relative
      margin-left 20px
      padding-left 22px
      cursor pointer

      &:before
        content ''
        position absolute
        left 0px
        top -2px
        width 19px
        height 18px
        background-image url('../../assets/image/like.svg')
        background-size contain
        background-position center
        background-repeat no-repeat
