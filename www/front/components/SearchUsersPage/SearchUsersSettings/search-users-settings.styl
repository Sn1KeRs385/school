.search-users-settings
  width 330px
  margin 0 0 0 10px
  background-color white
  border-radius 10px
  padding 21px 15px 40px 15px

  @media screen and (max-width 991px)
    margin 0
    width 100%

  @media screen and (max-width 767px)
    border-radius 0

  &__title
    font-size 20px
    line-height 25px
    margin 0 0 19px 0

  &__param
    padding 0 0 15px 0

    &-title
      margin 0 0 8px 0

  &__radio
    padding 0 0 11px 0
    display flex

  &__buttons
    margin 8px 0 0 0
    display flex

  &__clear
    margin 0 10px 0 0
    flex-basis 50%
    flex-grow 1

  &__submit
    flex-basis 50%
    flex-grow 1


