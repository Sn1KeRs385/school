@import "../../../assets/style/params/colors.styl"
@import "../../../assets/style/mixins.styl"

.adjacent-modal-open
  .page-layout
    .tool-active
      background unset
      color unset
    .tool-tip__mark-container
      display none

.achievement-modal
  pointer-events auto
  min-height 220px
  width 100%
  max-width 670px
  background-color white
  border-radius 10px
  display flex
  flex-direction column

  &-field__notification-text
    .achievement-modal-field__input
      font-size 14px
      line-height 20px
      color $active_element_color
  &__close
    display block
    position fixed
    width 60px
    height 60px
    z-index 1
    color white
    top 30px
    right 30px
    pointer-events auto
    border-radius 50%
    cursor pointer

    @media screen and (max-width 991px)
      position absolute
      left 50%
      margin-left -30px
      top 20px

    @media screen and (max-width 767px)
      display none

  &__container
    display flex
    flex-direction column
    align-items center
    pointer-events none

    @media screen and (max-width 767px)
      flex-grow 1
      padding  0 0 100px 0

  &__back-to-profile
    display none
    pointer-events auto

    @media screen and (max-width 767px)
      display block
      width 100%

  @media screen and (max-width 767px)
    overflow auto
    max-width none
    border-radius 0
    height auto
    min-height 0
    flex-grow 1
  &__header
    flex-shrink 0
    padding 29px 15px 0 15px
    border-top-right-radius inherit
    border-top-left-radius inherit
    background-color white
    max-height 110px
    position relative
    z-index 10

  &__tab
    height 50px
    width 100%
    cursor pointer
    display flex
    align-items center
    justify-content center

  &__body
    position relative
    //overflow-x hidden
