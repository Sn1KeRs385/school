@import "../../../assets/style/params/colors.styl"

.adjacent-modal
  min-height 100%
  width 100%
  display flex
  flex-direction column
  flex-grow 1
  justify-content center
  padding 100px 0
  pointer-events none

  @media screen and (max-width 767px)
    padding 0

  &-container
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    overflow-y auto
    z-index 1000
    -webkit-overflow-scrolling touch
    background-color alpha(black, 0.8)

    @media screen and (max-width 767px)
      position relative
      z-index 100
      height 100%
      overflow visible
      background-color $primary_back_color
      display flex
      flex-direction column
      flex-grow 1

