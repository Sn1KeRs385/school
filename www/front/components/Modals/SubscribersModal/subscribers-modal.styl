@import "../../../assets/style/params/colors.styl"
@import "../../../assets/style/mixins.styl"

.subscribers-modal
  &__close
    display none

    @media screen and (min-width 768px)
      display block
      position fixed
      width 60px
      height 60px
      z-index 1
      color white
      top 30px
      right 30px
      pointer-events auto
      border-radius 50%
      cursor pointer

  &__container
    display flex
    flex-direction column
    align-items center
    pointer-events none

    @media screen and (max-width 767px)
      flex-grow 1
      margin 0 0 100px 0

  overflow-x hidden
  pointer-events auto
  height 560px
  width 100%
  max-width 500px
  background-color white
  border-radius 10px
  display flex
  flex-direction column

  &__back-to-profile
    display none
    pointer-events auto

    @media screen and (max-width 767px)
      display block
      width 100%

  @media screen and (max-width 767px)
    max-width none
    border-radius 0
    height auto
    min-height 0
    flex-grow 1

  &__header
    flex-shrink 0
    padding 9px 0 0 0
    border-top-right-radius inherit
    border-top-left-radius inherit
    background-color white
    max-height 110px
    position relative
    z-index 10

  &__tab
    height 50px
    width 100%
    cursor pointer
    display flex
    align-items center
    justify-content center

  &__search-input-container
    border-bottom 1px solid $line_color

  &__search-result
    overflow-y auto
    overflow-x hidden
    border-bottom-right-radius inherit
    border-bottom-left-radius inherit
    height 450px

    @media screen and (max-width 767px)
      overflow-y hidden
      height 100%

    &-no-result
      padding 15px
      font-size 14px
      color $placeholder_color

    &-container
      flex-grow 1
      overflow-x hidden
      position relative
      border-bottom-right-radius inherit
      border-bottom-left-radius inherit

    &-loader
      height 50px
      width 50px
      margin-top 15px

      &-container
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background-color alpha(white, 0.7)
        display flex
        justify-content center
        z-index 10

    &-item
      border-bottom 1px solid $line_color
      cursor pointer

      &:last-child
        border-color transparent

  &__more-loader-container
    border-top 1px solid $line_color
    padding 15px
    display flex
    justify-content center
