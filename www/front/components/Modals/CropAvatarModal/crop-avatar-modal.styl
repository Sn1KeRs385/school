@import "../../../assets/style/params/colors.styl"

.crop-avatar-modal
  pointer-events auto
  align-self center
  max-width 670px
  width 100%

  @media screen and (max-width 767px)
    padding 0 0 100px 0
    max-width none

  &__close
    display none

    @media screen and (min-width 768px)
      display block
      position fixed
      width 60px
      height 60px
      z-index 1
      color white
      top 30px
      right 30px
      pointer-events auto
      border-radius 50%
      cursor pointer

  &__back-to-profile
    display none
    pointer-events auto

    @media screen and (max-width 767px)
      display block
      width 100%

  &__modal
    width 100%
    background-color white
    border-radius 10px

    @media screen and (max-width 767px)
      border-radius 0

  &__header
    border-bottom 1px solid $line_color
    padding 20px 15px 20px 15px
    font-size 20px
    line-height 25px

  &__cropper
    height auto
    padding 20px 15px 20px 15px

  &__description
    padding 20px 15px 0 15px
    color $placeholder_color

  &__examples
    display flex
    padding 0 15px 15px 15px

  &__big-avatar-example
    margin 0 10px 0 0
    width 140px
    height 140px
    display block
    border-radius 50%

  &__min-avatar-example
    width 40px
    height 40px
    display block
    border-radius 50%

  &__footer
    padding 10px 15px 15px 15px
    display flex

    &-submit
      flex-grow 1
      flex-basis 50%
      margin 0 15px 0 0

    &-cancel
      flex-grow 1
      flex-basis 50%



