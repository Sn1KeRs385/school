          &-fake
            position relative
            left -112px
            top 63px
            .tool-tip__mark-triangle
              left 103px
              bottom -10px
          &-like
            position relative
            left -192px
            top 63px
            .tool-tip__mark-triangle
              left 182.5px
        &-achievement
          &-hall
            top: 50px;
            .tool-tip__mark-triangle
              left 86px
          &-category
            top 117px
  @media screen and (max-width: 767px)
    &__mark
      &-container
        &-profile-info
          left 165px
        &-achievement-tab
          top 49px !important
          left 49px
          .tool-tip__mark-triangle
            left 10px
        &-goal-tab
          left unset
          right 228px
          .tool-tip__mark-triangle
            left 135px
        &-achievement
          &-hall
            left: -5px;
            top: 50px;
            .tool-tip__mark-triangle
              left 122px
  @media screen and (max-width: 575px)
    &__mark
      &-container
        &-profile-info
          top 100px
          left 62px
        &-achievement
          &-hall
            left -2px
            .tool-tip__mark-triangle
              left 73px
