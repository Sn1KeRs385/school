  @import "../../../assets/style/params/colors.styl"
  @import "../../../assets/style/mixins.styl"

  .tag
    height 28px
    background white
    border 1px solid $line_color
    border-radius 5px
    display inline-flex
    align-items center
    justify-content center
    padding 0 9px
    margin 0 5px 6px 0
    text-transform lowercase
    cursor pointer
    max-width 100%

    &__text
      font-size 14px
      flex-grow 1
      flex-shrink 1
      min-width 0
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

    &:hover
      border-color $border_input_color_focus

    &__close
      width 11px
      height 11px
      margin 0 0 0 10px
      color $icon_color
      position relative
      flex-shrink 0

      &:hover
        color $active_element_color

      &>svg
        position absolute
        top 0
        right 0
        left 0
        bottom 0
        width 100%
        height 100%
