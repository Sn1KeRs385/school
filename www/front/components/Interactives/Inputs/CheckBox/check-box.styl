@import "../../../../assets/style/params/colors.styl"
@import "../../../../assets/style/mixins.styl"

.check-box
  display inline-flex
  cursor pointer
  position relative
  align-items baseline

  &>input
    opacity 0
    position absolute
    width 0
    height 0

  &:hover
    &>.check-box__box
      border-color #CCCCCC

  &--disabled
    color $placeholder_color

  &__box
    position relative
    border 1px solid $border_input_color
    height 24px
    width 24px
    flex-grow 0
    display flex
    justify-content center
    align-items center
    border-radius 5px
    flex-shrink 0
    color transparent
    transition border-color 0.15s, box-shadow 0.15s, color 0.15s

    &>svg
      position relative

    &--checked
      color $active_element_color

      &>svg
        z-index 1

    &--focus
      box-shadow 0 0 0 2px #F6F6F6
      border-color $border_input_color_focus

    &--disabled
      border-color $border_input_color !important
      &::before
        position absolute
        content ''
        background-color alpha($secondary_back_color, 0.5)
        top 0
        bottom 0
        left 0
        right 0
        border-radius 4px
        z-index 10

  &__label
    margin 0 0 0 10px
    display block
    flex-grow 1
