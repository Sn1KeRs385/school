@import "../assets/style/params/colors.styl"
@import "../assets/style/mixins.styl"

.settings
  margin 30px 0 100px 0

  &__back-to-settings
    display flex
    align-items center
    padding 0 15px
    margin 20px 0
    text_rubik(16px, 20px, $active_element_color)

    &-arrow-container
      margin 0 10px 0 0
      background-color $active_element_color
      width 30px
      height 30px
      border-radius 50%
      display flex
      align-items center
      justify-content center
      transform rotateZ(180deg)
      color white

  @media screen and (max-width 991px)
    margin 0 0 100px 0

  @media screen and (max-width 575px)

    &__container
      padding 0

  &__menu
    width 330px
    border-radius 10px
    background-color white
    margin 0 0 0 10px
    position sticky
    top 80px

    @media screen and (max-width 1199px)
      width 280px

    @media screen and (max-width 991px)
      top 10px
      width 100%
      margin 30px 0 0 0

    @media screen and (max-width 575px)
      margin 0
